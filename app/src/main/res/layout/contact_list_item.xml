<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contact_card_height"
    android:layout_margin="@dimen/contact_card_margin">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/contact_photo"
            android:contentDescription="@string/contact_image_desc"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/contact_image_protection"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:padding="@dimen/contact_detail_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contact_name"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_height="@dimen/contact_partion_line_thickness"/>
            <TextView
                android:id="@+id/contact_email"
                android:layout_marginTop="@dimen/contact_detail_margin"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_height="@dimen/contact_partion_line_thickness"/>
            <TextView
                android:id="@+id/contact_last_contact"
                android:layout_marginTop="@dimen/contact_detail_margin"
                android:textAppearance="?android:textAppearanceSmall"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</android.support.v7.widget.CardView>